#!/usr/bin/env bash
set -eo pipefail

echo "---> Hugo Buildpack"

build_dir=$1
cache_dir=$2
env_dir=$3

cd $build_dir

hugolayer="$build_dir"/hugo
mkdir -p "$hugolayer/bin"
hugo_url=https://github.com/gohugoio/hugo/releases/download/v0.90.1/hugo_extended_0.90.1_Linux-64bit.tar.gz
wget -q -O - "$hugo_url" | tar -xzf - -C "$hugolayer"
mv "$hugolayer/hugo" "./bin/hugo"
rm -rf $hugolayer

echo '---> Build site'
./bin/hugo -v

cat > "$build_dir/launch.toml" <<EOL
[[processes]]
type = "web"
command = "hugo server --bind '0.0.0.0' -p \${PORT:-8080}"
EOL
